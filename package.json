{
  "name": "vid2story",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start-public": "npm run start && tmole 3000",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "lint": "eslint 'src/**/*.ts'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "create-image": "docker build -t vid2story .",
    "docker:build": "docker buildx build --platform linux/amd64,linux/arm64 -t vid2story:latest -t vid2story:$npm_package_version .",
    "docker:build-local": "docker buildx build --platform linux/amd64,linux/arm64 -t vid2story:latest -t vid2story:$npm_package_version --load .",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.15.0",
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "better-sqlite3": "12.2.0",
    "dotenv": "17.2.1",
    "drizzle-orm": "0.44.4",
    "express": "^5.1.0",
    "ffmpeg-ffprobe-static": "6.1.2-rc.1",
    "install": "^0.13.0",
    "moment": "^2.30.1",
    "multer": "2.0.2",
    "openai": "5.13.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "ffmpeg-ffprobe-static",
      "better-sqlite3"
    ]
  },
  "devDependencies": {
    "@jest/globals": "30.0.5",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jest": "30.0.0",
    "@types/multer": "2.0.0",
    "@types/node": "24.3.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.33.0",
    "jest": "30.0.5",
    "nodemon": "^3.1.10",
    "npm": "^11.5.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
